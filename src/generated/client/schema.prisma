generator client {
  provider   = "prisma-client-js"
  output     = "../src/generated/client"
  engineType = "library"
}

datasource db {
  provider = "postgresql"
}

// --- AUTH & SYSTEM ---
model User {
  id        String   @id @default(uuid())
  email     String   @unique
  role      String   @default("STAFF")
  createdAt DateTime @default(now())
}

model ImportJob {
  id        String   @id @default(uuid())
  filename  String
  status    String // PENDING, COMPLETED, FAILED
  log       Json?
  createdAt DateTime @default(now())
}

// --- THE HUB (Golden Record) ---
model Guest {
  id             String  @id @default(uuid())
  fullName       String?
  normalizedName String? // Lowercase/trimmed for matching
  email          String? @unique
  phone          String? @unique

  // Relations
  appointments    Appointment[]
  creditProfile   CreditProfile?
  loyaltyAccounts LoyaltyAccount[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

// --- SPOKES ---
model Appointment {
  id              String   @id @default(uuid())
  guestId         String
  guest           Guest    @relation(fields: [guestId], references: [id])
  serviceName     String
  appointmentDate DateTime
  status          String?
  rawId           String?  @unique // Composite key (guest+date) for upserting
}

model CreditProfile {
  id             String    @id @default(uuid())
  guestId        String    @unique
  guest          Guest     @relation(fields: [guestId], references: [id])
  provider       String    @default("CHERRY")
  approvedAmount Float?
  expirationDate DateTime?
}

model LoyaltyAccount {
  id             String @id @default(uuid())
  guestId        String
  guest          Guest  @relation(fields: [guestId], references: [id])
  programName    String // EVOLUS, ASPIRE
  pointsBalance  Float?
  rewardsBalance Float?
}
